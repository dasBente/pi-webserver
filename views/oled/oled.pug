extends ../layout

block styles
  link(rel="stylesheet", href="/oled/oled.css")

block scripts
  script(src="/oled/canvasHandler.js")

block content
  div(class="container")
    //- Toolbar
    div(class="row mt-3 toolbar")
      button(type="button" class="btn btn-light") Draw
      button(type="button" class="btn btn-dark") Line
      button(type="button" class="btn btn-dark") Rectangle
      
    //- Canvas
    canvas(class="row mx-auto mt-2", width=640, height=320)